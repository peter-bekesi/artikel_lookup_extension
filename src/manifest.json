{
  "manifest_version": 3,
  "name": "German Article Lookup",
  "version": "1.0",
  "description": "Double-click a German noun to see its article and plural.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "German Article Lookup",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
  {
    "resources": ["dictionary.json"],
    "matches": ["<all_urls>"]
  }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+I"
      },
      "description": "Toggle Artikel Lookup"
    }
  }
}
